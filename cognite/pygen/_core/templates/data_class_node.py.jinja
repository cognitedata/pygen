                resources.extend(other_resources){% else %}
        edge_type = dm.DirectRelationReference("{{ field.prop.type.space }}", "{{ field.prop.type.external_id }}")
        for {{ field.variable }} in self.{{ field.name }} or []:
            other_resources = DomainRelationApply.from_edge_to_resources(
                cache, self, {{field.variable}}, edge_type, view_by_write_class
            )
            resources.extend(other_resources){% endif %}
{% endfor %}{% for field in data_class.one_to_one_edges %}
        if isinstance(self.{{ field.name }}, DomainModelApply):
            other_resources = self.{{ field.name }}._to_instances_apply(cache, view_by_write_class)
            resources.extend(other_resources)
{% endfor %}{% for field in data_class.single_timeseries_fields %}
        if isinstance(self.{{ field.name }}, {% if is_pydantic_v2 %}CogniteTimeSeries{% else %}TimeSeries{% endif %}):
